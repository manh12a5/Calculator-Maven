pipeline {
    agent any
        tools {
            maven 'Maven 3.6.3'
            jdk 'JDK8'
        }
    stages {
        stage('Initialize'){
            steps{
                echo "PATH = ${M2_HOME}/bin:${PATH}"
                echo "M2_HOME = /opt/maven"
            }
        }
        stage('Build') {
            steps {
                 git 'https://github.com/manh12a5/Calculator-Maven.git'
                 sh 'mvn -B -DskipTests clean package'
            }
        }
     }
    post {
       always {
           junit(
                allowEmptyResults: true,
                testResults: '*/test-reports/.xml'
                )
      }
   }
}