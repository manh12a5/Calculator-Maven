pipeline {
    agent any
        tools {
            maven 'Maven 3.6.3'
            jdk 'JDK8'
        }
    stages {
        stage('Initialize'){
            steps{
                echo "PATH = ${M2_HOME}/bin:${PATH}"
                echo "M2_HOME = /opt/maven"
            }
        }
        stage('Build') {
            steps {
                 git 'https://github.com/manh12a5/Calculator-Maven.git'
                 bat 'mvn clean'
            }
        }
        stage ('Testing Stage') {
            steps {
                bat 'mvn test'
            }
        }
     }
    post {
       always {
          junit '**/target/surefire-reports/*.xml'
      }
   }
}