pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                git 'https://github.com/manh12a5/Calculator-Maven.git'
//                 sh 'mvn clean'
                bat 'mvn clean'
            }
        }
        stage('Test') {
            steps {
//                 sh 'mvn test'
                bat 'mvn test'
            }

            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }
    }
}