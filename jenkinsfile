pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                git 'https://github.com/manh12a5/Calculator-Maven.git'
//                 sh 'mvn clean'
                // bat '.\\mvnw clean compile'
             withMaven(maven : 'apache-maven-3.6.3') {
                 bat 'mvn clean compile'
             }
            }
        }
        stage('Test') {
            steps {
//                 sh 'mvn test'
                bat 'mvn test'
            }

            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }
    }
}