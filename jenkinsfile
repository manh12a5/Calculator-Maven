pipeline {
    agent any
        tools {
            maven 'Maven 3.6.3'
            jdk 'jdk8'
        }

    stages {
        stage('Build') {
            steps {
                git 'https://github.com/manh12a5/Calculator-Maven.git'
//                 sh 'mvn clean'
                    echo 'PATH = C:\Program Files\apache-maven-3.6.3\bin'
                    echo 'M2_HOME = C:\Program Files\apache-maven-3.6.3'
                bat 'mvn clean'
            }
        }
        stage('Test') {
            steps {
//                 sh 'mvn test'
                bat 'mvn test'
            }

            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }
    }
}